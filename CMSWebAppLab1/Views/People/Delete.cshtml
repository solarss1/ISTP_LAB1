@model CMSWebAppLab1.Models.Person

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалення</h1>

<h3>Ви впевненні щодо видалення?</h3>
<div>
    <h4>Персона</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ім'я:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonName)
        </dd>
        <dt class = "col-sm-2">
            Брав участь як:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TookPartAs)
        </dd>
    </dl>
    <p></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
