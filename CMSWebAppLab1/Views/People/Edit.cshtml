@model CMSWebAppLab1.Models.Person

@{
    ViewData["Title"] = "Редагування";
}

<h1>Редагувати інформацію про персону</h1>

<h4>Персона</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PersonName" class="control-label">Ім'я:</label>
                <input asp-for="PersonName" class="form-control" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TookPartAs" class="control-label">Брав участь як:</label>
                <input asp-for="TookPartAs" class="form-control" />
                <span asp-validation-for="TookPartAs" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
