@model IEnumerable<Session>

@{
    ViewData["Title"] = "Система Управління Кінотеатрами";
}

<!DOCTYPE html>
<html>
    <head>
        <style>
            .no-border-table {
                border-collapse: collapse;
                width: 100%; /* Optional: Adjust width as needed */
            }

                .no-border-table td {
                    border: none; /* Make borders invisible */
                    padding: 8px; /* Optional: Adjust padding as needed */
                }
        </style>
    </head>
    <body>
        <div class="text-center">
            <h1 class="display-4">Вітаємо в Системі Управління Кінотеатрами</h1>
        </div>
        <table class="no-border-table">
            <tr>
                <td>
                    <form method="get" asp-controller="Cinemas" asp-action="Index">
                        <p align="center">
                        <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Кінотеатри") />
                        </p>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="Halls" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Зали") />
                        </p>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="Sessions" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Сеанси") />
                        </p>
                    </form>
                </td>
            <td>
                <form method="get" asp-controller="Sessions" asp-action="SearchSessions">
                    <p align="center">
                        <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Пошук Сеансу" ) />
                    </p>
                </form>
            </td>
            </tr>
            <tr>
                <td>
                    <form method="get" asp-controller="Tickets" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Квитки") />
                        </p>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="Movies" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Фільми") />
                        </p>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="People" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Персони") />
                        </p>
                    </form>
                </td>
                <td>
                    <form method="get" asp-controller="PersonsToMovies" asp-action="Index">
                        <p align="center">
                            <input type="submit" class="btn btn-primary btn-lg" style="width:250px" value="Персони у фільмах") />
                        </p>
                    </form>
                </td>
            </tr>
        </table>
    <p></p>
    <h2 align="center">Available Sessions</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Фільм</th>
                <th>Кінотеатр</th>
                <th>Зала</th>
                <th>Початок</th>
                <th>Ціна</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model)
            {
                <tr>
                    <td>@session.Movie.Title</td>
                    <td>@session.Hall.Cinema.CinemaName</td>
                    <td>@session.Hall.HallName</td>
                    <td>@session.StartTime</td>
                    <td>@session.Price.ToString("C")</td>
                    <td>
                        <a asp-controller="Tickets" asp-action="Buy" asp-route-sessionId="@session.Id" class="btn btn-primary">Купити квиток</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>