@model IEnumerable<CMSWebAppLab1.Models.PersonsToMovie>

@{
    ViewData["Title"] = "Персони у фільмах";
}

<h1>CRUD: Персони у фільмах</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Створити новий запис</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Фільм
            </th>
            <th>
                Персона
            </th>
            <th>
                Брав участь як
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.TookPartAs)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>

                        <span> | </span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>

                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
