@model CMSWebAppLab1.Models.PersonsToMovie

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалення</h1>

<h3>Ви впевненні щодо видалення?</h3>
<div>
    <h4>Зв'язок</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Фільм:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
            Персона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.PersonName)
        </dd>
    </dl>
    <p></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
