@model CMSWebAppLab1.Models.Hall

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Зала</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallName)
        </dd>
        <dt class = "col-sm-2">
            Загальна кількість місць:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxPlaces)
        </dd>
        <dt class = "col-sm-2">
            Кінотеатр:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cinema.CinemaName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутися до списку</a>
</div>
