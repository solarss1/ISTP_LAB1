@model CMSWebAppLab1.Models.Hall

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалення</h1>

<h3>Ви впевненні щодо видалення?</h3>
<div>
    <h4>Зала</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallName)
        </dd>
        <dt class = "col-sm-2">
            Загальна кількість місць:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxPlaces)
        </dd>
        <dt class = "col-sm-2">
            Кінотеатр:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cinema.CinemaName)
        </dd>
    </dl>
    <p></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
