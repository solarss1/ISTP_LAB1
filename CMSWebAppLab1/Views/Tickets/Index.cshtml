@model IEnumerable<CMSWebAppLab1.Models.Ticket>

@{
    ViewData["Title"] = "Квитки";
}

<h1>CRUD: Квитки</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Створити новий запис</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Місце
            </th>
            <th>
                Час продажу
            </th>
            <th>
                Сесія
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session.Id)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>

                        <span> | </span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>

                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
