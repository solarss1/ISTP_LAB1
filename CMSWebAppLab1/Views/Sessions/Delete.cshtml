@model CMSWebAppLab1.Models.Session

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалення</h1>

<h3>Ви впевненні щодо видалення?</h3>
<div>
    <h4>Сеанс</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Початок:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            Ціна:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Зала:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hall.HallName)
        </dd>
        <dt class = "col-sm-2">
            Фільм:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
    
    <p></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
